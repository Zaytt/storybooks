<h1>Welcome {{user.firstName}}</h1>
<h4>These are your stories: </h4>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Last Edit</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/show/{{id}}">{{title}}</a></td>
          <td>{{formatDate publishDate 'MMMM Do YYYY'}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a class="btn right-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>
            <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn red right-align"><i class="fa fa-remove"></i> Delete</button>
            </form>  
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You haven't created any stories yet.</p>
{{/if}}