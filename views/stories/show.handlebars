
<div class="row">
  
  <div class="col s12 m8">
    <h3 class=" offset-s3">
      {{story.title}}
      <small>{{{editIcon story.user.id user.id story.id false}}}</small>
    </h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate story.publishDate 'MMMM Do YYYY'}}</span>
        {{{story.body}}}
      </div>
    </div>
    {{#if story.allowComments}}
      <div class="card">
        <div class="card-content">
          <span class="card-title">Comments</span>
          {{#if user}}
            <form action="/stories/comment/{{story.id}}" method="post">
              <div class="input-field">
                <textarea name="commentBody" class="materialize-textarea"></textarea>
                <label for="commentBody">Add Comment</label>
                <input type="submit" value="Submit" class="btn">
              </div>
            </form>
          {{else}}
            <a href="/auth/google">Log in </a>to leave a comment
          {{/if}}
        </div>
      </div>

      {{#each story.comments}}
        <div class="card">
          <div class="card-content">
            <h6>{{commentBody}}</h6>
            <div class="divider comment-divider"></div>
            <div class="chip">
              <img src={{commentUser.image}} alt="User Image">
              {{commentUser.firstName}} {{commentUser.lastName}}
            </div>
            <br>
            <small>Posted: {{formatDate commentDate "MMMM Do YYYY"}}</small>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{story.user.firstName}} {{story.user.lastName}}</span>
         <img class="circle responsive-img" src="{{story.user.image}}" />
      </div>
      <div class="card-action">
        <a href="/stories/user/{{story.user.id}}">More from {{story.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>